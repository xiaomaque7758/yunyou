a placeholder='请吐槽最多120个字' maxlength='120'></textarea>\r\n    <mt-button size='large'>发表评论</mt-button>\r\n    <!--显示评论区域-->\r\n    <div class='cmt-list'>\r\n        <div class='cmt-item'>\r\n            <div class='cmt-info' v-for='item in list' :key='item.id'>\r\n                第 {{item.nid}} 楼：用户名：{{item.user_name}}\r\n                发表时间：{{item.ctime |datatimeFilter}}\r\n                <div class='cmt-body'>\r\n                    {{item.content}}\r\n                </div>\r\n            </div>\r\n        </div>\r\n    </div>\r\n    <mt-button type='primary' size='large' @click='getMore'>加载更多</mt-button>\r\n    </div>\r\n</template>\r\n<script>\r\n    export default{\r\n        created(){\r\n            this.getMore();\r\n        },\r\n        methods:{\r\n            getMore(){\r\n                this.pno++;\r\n                var hasMore=this.pno <=this.pageCount;\r\n                if(hasMore){return}\r\n                \r\n                //发送请求获取评论列表 nid\r\n                var url=\"comment?pno=\"+this.pno+\"pageSize=\"+this.pageSize;\r\n                this.$http.get(url).then(result=>{\r\n                    var rows=this.list.concat(result.body.data);\r\n                \r\n                });\r\n                    \r\n                //追加 list\r\n\r\n                //在模板中创建循环显示当前的评论列表\r\n\r\n                //楼层 1234 \r\n\r\n                //在模板中添加 ‘加载更多’ 按钮\r\n                \r\n                //点击事件\r\n            }\r\n        },\r\n        data(){\r\n            return {\r\n                list:[],    //当前页的内容\r\n                pno:0,      //页码\r\n                pageSize:7, //✌大小\r\n                pageCount:1 //页数  \r\n            }\r\n        },\r\n        props:[\"id\"]\r\n    }\r\n</script>\r\n\r\n<style scoped>\r\n    .app-comment h3{\r\n        font-size:18px;\r\n    }\r\n    .app-comment textarea{\r\n        font-size:14px;\r\n        height:68px;\r\n        margin:0;\r\n    }\r\n    .app-comment .cmt-list{\r\n        margin:5px 0;\r\n    }\r\n    .app-comment .cmt-list .cmt-item{\r\n        border:1px solid #aaa;\r\n        margin-top:15px;\r\n    }\r\n    .app-comment .cmt-list .cmt-info{\r\n        line-height:30px;\r\n        background:#ccc;\r\n\r\n    }\r\n</style>"]}]}